		<repository>
		  <id>Mvn Repository</id>
		  <name>Spring Maven Repository</name>
		  <url>http://mvnrepository.com/artifact</url>
		</repository>
		
	    <!-- Zk Framework -->		
		<repository>
			<id>zk repository</id>
			<url>http://mavensync.zkoss.org/maven2</url>
		</repository>                
		<repository>
			<id>ZK EE Evaluation</id>
			<url>http://mavensync.zkoss.org/zk/ee-eval</url>
		</repository>
